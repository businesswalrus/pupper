{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": [
    {
      "name": "postgres",
      "icon": "postgresql",
      "volumes": [
        {
          "mountPath": "/var/lib/postgresql/data",
          "name": "pgdata"
        }
      ]
    },
    {
      "name": "redis",
      "icon": "redis",
      "volumes": [
        {
          "mountPath": "/data",
          "name": "redisdata"
        }
      ]
    }
  ]
}